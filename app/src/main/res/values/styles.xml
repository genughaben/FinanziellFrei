    -->

    <!-- app theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- basic colors -->
        <item name="colorPrimaryDark" tools:targetApi="lollipop">@color/colorPrimaryDark</item>
        <item name="colorPrimary" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="colorAccent" tools:targetApi="lollipop">@color/colorAccent</item>

        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>

        <!-- non basic attributes -->
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:colorBackground">@color/windowBackground</item>
        <item name="android:colorBackgroundCacheHint">@color/windowBackground</item>
    </style>



    <style name="marginTopWithin">
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="marginBottom">
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <string name="basicPadding">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </string>

    <style name="btnStyle">

    </style>

</resources>
